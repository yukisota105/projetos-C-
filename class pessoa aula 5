using System;

class Program {
  public static void Main (string[] args) {
    Pessoa p = new Pessoa();
    Console.WriteLine(p.ToString());

    p.Nome = "Jo√£o";
    Console.WriteLine(p);

    Console.ReadKey();
  }
}

class Pessoa{
    private string nome;
/////////////////////////////////
----  NOVA ABA ------
    public Pessoa(){
      this.nome = null;
    }

    public Pessoa(string nome){
      this.nome = nome;
    }

    public string Nome{
      get{return nome;}
      set{nome = value;}
    }

    public override string ToString(){
      return (String.Format("Nome: {0}", nome));
  }
}
